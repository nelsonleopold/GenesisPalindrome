@model GenesisPalindrome.Models.Palindrome

@{
    ViewData["Title"] = "Genesis Palindrome";
}

<!doctype html>
<html lang="en" class="h-100">

<head>
    <title>Palindrome: Coding Challenge by nelson the dev</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <!-- Dev Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css">

    <!-- Convert this to an external style sheet -->
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/site.css">

    <!-- favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="icon" type="image/png" href="/img/nelsonTheFaviconTransparent50pxX50px.png">

</head>

<body class="d-flex flex-column h-100">
    <main class="flex-shrink-0">
        <div class="container mt-5">
            <img src="/img/palindromeTransparent1080x356.png" width="400" alt="">
            <h1 class="form-label">Palindrome checker:</h1>
            <div class="row align-items-end">
                <form asp-controller="Home" asp-action="Palindrome" method="post">
                    <div class="col">
                        <label asp-for="UserWord" class="form-label">Am I a Palindrome???</label>
                        <input type="text" asp-for="UserWord" name="UserWord" class="form-control" id="txtMessage"
                               onfocus="this.placeholder=''" placeholder="Write Word Here">
                    </div>
                    <div class="col">
                        <button type="submit" id="btnDisplayMessage" class="btn btn-primary" onclick="showResults()">Let's Check</button>
                    </div>
                </form>
            </div>

            <div class="row mt-5">
                <h2 class="mt-5 border-bottom border-2">Results</h2>
                <div class="col" id="results">
                    <!-- My items will go here -->
                    @if (@Model.isPalindrome)
                    {
                        <p>The word "@(Model.UserWord)" is a palindrome.</p>
                    }else if(@Model.UserWord != null && @Model.isPalindrome == false)
                    {
                        <p>The word "@(Model.UserWord)" is not a palindrome.</p>
                    }
                </div>
            </div>
        </div>
    </main>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous">
    </script>

    <!-- Custom JS -->
    <script src="/js/site.js"></script>

    <script>
        
    </script>

</body>

</html>